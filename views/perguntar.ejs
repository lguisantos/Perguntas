<!DOCTYPE html>
<html lang="en">

<!-- importando um módulo -->
<%- include ('partials/head.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <!-- Container do Bootstrap -->
    <div class="container" id="formulario">

        <!-- Bootstrap: card -->
        <div class="card">
            <div class="card-header">
                <h3>Realizar Pedido</h3>
            </div>

            <div class="card-body">

                <form method="POST" action="/novapergunta">
                    <!-- Bootstrap: form-control -> adapta os campos ao formulário-->
                    <label>Titulo</label>
                    <input name="titulo" placeholder="Insira um Título" type="text" class="form-control">

                    <br><label>Descrição</label>
                    <textarea name="descricao" placeholder="Insira uma Descrição" class="form-control"></textarea>
                    <!-- Bootstrap:  btn btn-success -->
                    <br><button class="btn btn-success">Perguntar</button>
                </form>
            </div>
        </div>

    </div>
</body>
<%- include ('partials/importBootstrapScripts.ejs') %>

</html>